<header>
    <div class="top-header">
        <div class="logo-principal">
            <a href="/"><img src="/img/logo 2.png" alt="logo"></a>
        </div>
        <div>
            <ul class="login-cart">
                <% if(locals.userToLogged){ %>
                    <img src="/img/avatars/<%= locals.userToLogged.image%>">
                    <h2><%= locals.userToLogged.name%></h2>
                <% } else{ %>
                    <li class="login"><a href="/user/login"><i class="fas fa-user"></i></a></li>
                <% } %> 
                <li class="cart"><a href="/product/productCart"><i class="fas fa-shopping-cart"></i></a></li>
            </ul>
            <% if(locals.userToLogged){ %>
            <div class="desplegable">
                <ul>
                    <li><a href="/user/profile">Perfil</a></li>
                    <li><a href="/user/logout">Cerrar Sesión</a></li>
                </ul>
            </div>
            <% } else{ %>
                <div class="desplegableNone">
                    <ul>
                        <li><a href="/user/profile">Perfil</a></li>
                        <li><a href="/user/logout">Cerrar Sesión</a></li>
                    </ul>
                </div>
            <% } %>

        </div>
        <form action="/product/search" method="GET">
            <div class="shearch">
                <div class="shearch-bar">
                <input type="text" name="search" placeholder="Buscar productos, marcas y más">
                </div>
                <div class="shearch-i">
                <button type="submit"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    <nav>
        <div class="menu">
            <input type="checkbox" id="check_menu">
            <label for="check_menu" id="label_check">
                <i class="fas fa-bars"></i>
            </label>
        </div>
        <ul class="nav_menu">
            <li class="active"><a href="#">Categorias</a>
                <ul class="sub_menu">
                    <li><a href="#">TV, Audio y Video</a></li>
                    <li><a href="">Celulares y Tecnología</a></li>
                    <li><a href="#">Climatización</a></li>
                    <li><a href="#">Electrodomesticos</a></li>
                </ul>
            </li>
            <li class="active"><a href="#">Sucursales</a></li>
            <li class="active"><a href="#">Seguros</a></li>
        </ul>
    </nav>
</header>