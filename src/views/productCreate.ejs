<%- include('partials/head', { styles: ['forms'] }) %>
<body class="background">
    <%- include('partials/header') %>
    <main class="main_form">
        <div class="forms">
            <form action="/product/create" method="post"  enctype="multipart/form-data">
                <div>
                    <h1>Carga de Producto</h1>
                    <div class="input-box">
                        <input type="text" placeholder="Nombre" required name="name">
                    </div>
                    <div class="input-box">
                        <input type="text" placeholder="Descripcion" required name="description">
                    </div>
                    <div class="input-box">
                        <input type="file" required name="img">
                    </div>
                    <div class="input-box">
                        <select class="selectCategory" name="Categoría" id="">Categoria
                            <option value="#">Selecciona una Categoria</option>
                            <option value="TV">TV</option>
                            <option value="Audio">Audio</option>
                            <option value="Celulares y Tecnología">Celulares y Tecnología</option>
                            <option value="Climatización">Climatización</option>
                            <option value="Cocinas">Cocinas</option>
                            <option value="Heladeras">Heladeras</option>
                            <option value="Lavado">Lavado</option>
                            <option value="Pequeños Cocina">Pequeños Cocina</option>
                            <option value="Pequeños Hogar">Pequeños Hogar</option>
                        </select>
                       
                    </div>
                    <div class="input-box">
                        <input type="text" placeholder="Sub-Categoría" required name="sub-category">
                    </div>
                    <div class="input-box">
                        <input type="number" placeholder="Precio" required name="price">
                    </div>
                    <div class="input-box">
                        <input type="number" placeholder="Descuento" name="discount">
                    </div>
                    <button type="submit">Cargar</button>
                    <button type="reset">Limpiar Datos</button>
                </div>
            </form>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>