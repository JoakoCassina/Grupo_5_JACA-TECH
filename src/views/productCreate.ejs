<%- include('partials/head', { styles: ['forms'] }) %>
<body class="background">
    <%- include('partials/header') %>
    <main class="main_form">
        <div class="forms">
            <form action="/product/create" method="post"  enctype="multipart/form-data">
                <div>
                    <h1>Carga de Producto</h1>
                    <div class="input-box">
                        <input type="text" placeholder="Nombre" name="name">
                        <% if (locals.errors && errors.name) { %>
                            <span class="error">
                                <%= errors.name.msg %>
                            </span>
                        <% } %>
                    </div>
                    <div class="input-box">
                        <select class="selectCategory" name="brand" id="">Marcas
                            <option value="#">Selecciona una Marca</option>
                            <% locals.brand?.forEach(element => { %>
                                
                                <option value="<%= element.id %>"><%= element.name %></option>
                            <% }); %>
                        </select>
                       
                    </div>
                    <div class="input-box">
                        <input type="text" placeholder="Descripcion" name="description">
                        <% if (locals.errors && errors.description) { %>
                            <span class="error">
                                <%= errors.description.msg %>
                            </span>
                        <% } %>
                    </div>
                    <div class="input-box">
                        <input type="file" name="image">
                        <% if (locals.errors && errors.image) { %>
                            <span class="error">
                                <%= errors.image.msg %>
                            </span>
                        <% } %>
                    </div>
                    <div class="input-box">
                        <select class="selectCategory" name="category" id="">Categoria
                            <option value="#">Selecciona una Categoria</option>
                            <% locals.categories?.forEach(element => { %>
                                
                                <option value="<%= element.id %>"><%= element.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="input-box">
                        <input type="text" placeholder="Sub-CategorÃ­a" name="subCategory">
                    </div>
                    <div class="input-box">
                        <input type="number" placeholder="Precio" name="price">
                    </div>
                    <div class="input-box">
                        <input type="number" placeholder="Descuento" name="discount">
                    </div>
                    <button type="submit">Cargar</button>
                    <button type="reset">Limpiar Datos</button>
                </div>
            </form>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>